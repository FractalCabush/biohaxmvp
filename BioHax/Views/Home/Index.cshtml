@{
    ViewData["Title"] = "Home Page";
}
<div class="row rowTopMargin">
	<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
		<ol class="carousel-indicators">
			<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
			<li data-target="#myCarousel" data-slide-to="1"></li>
			<li data-target="#myCarousel" data-slide-to="2"></li>
			<li data-target="#myCarousel" data-slide-to="3"></li>
		</ol>
		<div class="carousel-inner" role="listbox">
			<div class="item active">
				<img src="~/images/sj-carousel.svg" alt="SJ logotype" class="img-responsive" />
				<div class="carousel-caption" role="option">
					<p>
						Use your chip to register your train ticket
						<a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
							Learn More
						</a>
					</p>
				</div>
			</div>
			<div class="item">
				<img src="~/images/ost-carousel.svg" alt="Ostgotatrafiken logotype" class="img-responsive" />
				<div class="carousel-caption" role="option">
					<p>
						You can register your buspass with your chip on board Ostgotatrafikens vehicles
						<a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
							Learn More
						</a>
					</p>
				</div>
			</div>
			<div class="item">
				<img src="~/images/onlinepizza-carousel.svg" alt="online pizza logo" class="img-responsive" />
				<div class="carousel-caption" role="option">
					<p>
						Login to onlinepizza.se, then proceed to pay using your chip
						<a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525029&clcid=0x409">
							Learn More
						</a>
					</p>
				</div>
			</div>
			<div class="item">
				<img src="~/images/nt-carousel.svg" alt="NT logo" class="img-responsive" />
				<div class="carousel-caption" role="option">
					<p>
						Log on to nt.se, keep track of your newspaper subscription or log on to their service with your chip
						<a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
							Learn More
						</a>
					</p>
				</div>
			</div>
		</div>
		<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
			<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
			<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>

	<div class="row">
		<div class="col-md-6">
			<h2>Application uses</h2>
			<ul class="list-unstyled">
				<li>Use payment services, book train tickets and much much more!</li>
				<li><a href="https://go.microsoft.com/fwlink/?LinkId=518004">Bower</a> for managing client-side libraries</li>
				<li>Theming using <a href="https://go.microsoft.com/fwlink/?LinkID=398939">Bootstrap</a></li>
			</ul>
		</div>
	</div>
</div>
